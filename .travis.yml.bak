language: go

go:
  - 1.10.2

before_install:
  - go get gopkg.in/yaml.v2

install:
  - go build lifesaver.go

jobs:
  include:
  - stage: Install commands from build
    script: sudo ./lifesaver minimal && ls -la ~ && test -f ~/.vimrc
  - script: sudo ./lifesaver shell && ls -la ~ && test -f ~/.vimrc
  - stage: Install commands from compiled binaries
    script: wget -O - ls.gitcommit.fr | sudo bash -s minimal
  - script: wget -O - ls.gitcommit.fr | sudo bash -s shell
